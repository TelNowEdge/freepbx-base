<script type="text/javascript">
 const displayOverlay = (bool) => {
   if (bool === true) {
     $('#tne-overlay')
       .show();

     $('#action-bar')
       .hide('slow');
   }

   if (bool === false) {
     $('#tne-overlay')
       .hide();

     $('#action-bar')
       .show('fast');
   }
 }

 $('body')
   .append(
     $('<div />', {
       id: 'tne-overlay',
       class: 'tne-overlay',
     }).html('<i class="fa fa-spinner fa-spin"></i>')
   );

 displayOverlay(false);
</script>
